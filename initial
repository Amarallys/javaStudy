
import java.util.Scanner;

public class Main {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int myAge, ageAmanda;
		
		ageAmanda = sc.nextInt();
		myAge = sc.nextInt();
		
		int somaIdades = myAge + ageAmanda;
		int subtraindoIdades = ageAmanda - myAge;
		
		System.out.println("A soma da idade de vocês é igual a " + somaIdades);
		System.out.println("A diferença entre a idade de vocês é igual a " + subtraindoIdades);
		
		sc.close();
		
	}

}
